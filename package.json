{
  "name": "wbs-mcp",
  "displayName": "WBS MCP",
  "description": "MCP-enabled VS Code extension for Work Breakdown Structure management",
  "version": "0.1.0",
  "publisher": "nojaja",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nojaja/wbs-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/nojaja/wbs-mcp/issues"
  },
  "homepage": "https://github.com/nojaja/wbs-mcp#readme",
  "keywords": [
    "wbs",
    "work breakdown structure",
    "project management",
    "mcp",
    "model context protocol",
    "copilot",
    "collaboration"
  ],
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:mcpWbs.start",
    "onView:wbsTree"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "mcpWbs.start",
        "title": "MCP WBS: Start Local Server"
      },
      {
        "command": "wbsTree.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "wbsTree.openTask",
        "title": "Open Task Details"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "wbsTree",
          "name": "WBS Projects"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "wbsTree.refresh",
          "when": "view == wbsTree",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "wbsTree.openTask",
          "when": "view == wbsTree && viewItem == task",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "node ./out/test/runTest.js",
    "start-server-dev": "node ./out/server/index.js",
    "start-extension-dev": "code --extensionDevelopmentPath=."
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.0",
    "@types/sqlite3": "^3.1.11",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.85.0",
    "mocha": "^10.2.0",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "express": "^4.18.2",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.1.7",
    "uuid": "^9.0.1"
  }
}
