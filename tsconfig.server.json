{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "out",
    "sourceMap": true
  },
  "include": [
    "src/mcpServer/**/*",
    "src/extension/**/*",
    // include local ambient type declarations so custom modules like 'node:sqlite' are found
    "src/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/test",
    "src/extension/webview/**/*"
  ]
}
